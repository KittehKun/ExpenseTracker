<mah:MetroWindow x:Class="KittehExpenseTracker.AddExpenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:KittehExpenseTracker"
        mc:Ignorable="d"
        Title="Add Expense" Height="500" Width="400"
        ResizeMode="NoResize"
        ShowTitleBar="True" WindowStyle="ToolWindow"
                 WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" VerticalAlignment="Center" Margin="10">
            <TextBlock Margin="0,0,0,5">Expense Name</TextBlock>
            <TextBox x:Name="ExpenseName" Margin="0,0,0,10" Style="{StaticResource MahApps.Styles.TextBox}"></TextBox>

            <TextBlock Margin="0,0,0,5">Description</TextBlock>
            <TextBox x:Name="ExpenseDescription" MinHeight="50" MaxLines="3" Margin="0,0,0,10" Style="{StaticResource MahApps.Styles.TextBox}"></TextBox>

            <TextBlock Margin="0,0,0,5">Amount</TextBlock>
            <TextBox x:Name="ExpenseAmount" Margin="0,0,0,10" Style="{StaticResource MahApps.Styles.TextBox}"></TextBox>
        </StackPanel>
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="CloseButton" Content="Close" Grid.Column="0" HorizontalAlignment="Right" Margin="0,0,10,0" Style="{StaticResource MahApps.Styles.Button.MetroWindow.Close.Dark.Win10}" Click="CloseButton_Click"/>
            <Button x:Name="AddExpenseButton" Content="Add Expense" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" Style="{StaticResource MahApps.Styles.Button.Dialogs.Accent}" Click="AddExpenseToMain_Click"/>
        </Grid>

    </Grid>
</mah:MetroWindow>
